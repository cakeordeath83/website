<div class="container-fluid", style="border: solid 1px red">
  <div class="row">
    <div class=" col-md-offset-2 col-md-8", style="border: solid 1px red">
      <h1>Hello world!</h1>
        <% @posts.each do |post| %>
          <h3><%= link_to post.title, post_path(post) %></h3><br>
          <p><%= sanitize post.content %></p><br>
          <%= link_to "Edit", edit_post_path(post), class:"btn btn-default" %>
        <% end %>
        <%= link_to "Add new post", new_post_path, class: "btn btn-default" %>
    </div>

    <div class="col-md-2", style="border: solid 1px red">
        <p>Side column</p>
        <p>This is the side column bit that should house all of the links etc</p>
    </div>
    
  </div><!-- row -->
</div><!-- container -->