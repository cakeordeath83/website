<div class="container-fluid">
  
  <!-- Heading -->
  <div class="col-md-offset-2 col-md-8">
    <h1 style="text-align: center; margin-bottom: 30px;">Add a new post</h1>
    <p style="margin-bottom: 40px;">Don't forget category!</p>
  </div>
  
  <!-- Form -->
  <div class="row">
   <div class="col-md-offset-2 col-md-7">
    <%= render "form" %>
    </div>
    
  <!-- Navigation -->
  <div class="col-md-2 side-column-<%=params[:controller] %>">
    <h4>Blog categories</h4>
      <% @allposts.group_by{|post| post.category}.each do |category, value| %>
      <li class="list-unstyled"><%= link_to category, posts_path(:category => category) %></li>
      <% end %><br>
      
    <h4>By month </h4>
      <% @allposts.group_by{|post| post.created_at.strftime("%B")}.each do |month, value| %>
      <li class="list-unstyled"><%= month %></li>
      <% end %>
  </div>
</div>