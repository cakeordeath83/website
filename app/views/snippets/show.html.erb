<div class = "container-fluid" >
  <div class="row">
    <div class="col-md-offset-2 col-md-8" >
    <h1 class="text-center"><%= @snippet.title %></h1><br>
    <p><%= sanitize @snippet.content %></p>

    <% if user_signed_in? %>
    <%= link_to "Edit", edit_snippet_path(@snippet), class: "btn btn-default" %>
    <% end %>
    
      
      <%= render_shareable :buttons=> ['twitter', 'facebook'] %>
      <%= render partial: 'snippets/disqus' %>
    </div>
    <%=link_to "Back to guides", snippets_path, class: "btn btn-default" %>
  </div><!-- row -->
</div><!-- container -->

