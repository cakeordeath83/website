<% grouped_time_entries.sort_by{|date,value| date}.reverse.each do |date, posts| %>

<div class="col-md-4">
  <h4><%= date.strftime('%A %d %b %Y')  %></h4><br>
          <h5>Total time today </h5>
          <% this_date = @time_entries.select{|post| post.start.to_date == date.to_date} %>
					<% total = [] %>
					<% this_date.each do |date| %>
          <% if date.duration.to_i > 0 %>
          <% total.push(date.duration) %>
						<% end %>
					<% end %>
				
					<p><%= hours_and_minutes(total.reduce(:+)) %></p>
			
        </div><!-- col-md-4 -->
        <div class="col-md-8 time-entry-table" >
          
          <table class="table", style="text-align: center;">
            <thead>
              <tr>
                  <td><strong>Project</strong></td>								
                  <td><strong>Start Time</strong></td>
                  <td><strong>End Time</strong></td>
                  <td><strong>Minutes</strong></td>
                </tr>
            </thead>
            <tbody>
							<% posts.sort_by{|post| post.start.to_time}.each do |post| %>
              <tr>
								<td><%= post.description %></td>
								<td><%= post.start.to_time.strftime("%H:%M") %></td>
								<% if post.stop != nil %>
									<td><%= post.stop.to_time.strftime("%H:%M") %></td>
									<td><%= (post.duration / 60) %></td>
								<% else %>
								<td>Currently working!</td>
								<td></td>
								<% end %>
								
                
              <% end %> <!--post.each-->
                </tr>
            </tbody>
          </table>
        </div> <!-- col-md-8 -->

      	
        
      <% end %><!-- grouped_post.each -->
		</div><!-- row -->