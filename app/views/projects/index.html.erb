<div class="container">
  <h1>Projects</h1>

	<table class="table">
		<thead>
			<tr>
				<td>Title</td>
				<td>Link</td>
				<td>Image</td>
			</tr>
		</thead>
		<tbody>
			<tr>
				<% @projects.each do |p| %>
				<td><%= p.title %></td>
				<td><%= p.link %></td>
				<td id="projectimage"><%= image_tag p.image.url(:thumb) %></td>
				<td><%= link_to "Edit", edit_project_path(p) %></td>
				<td><%= link_to "Delete", project_path(p) , method: :delete, data: { confirm: 'Are you sure?' } %> </td>
			</tr>
			<% end %>
		</tbody>
	</table>
		
		
		
		
		
  
</div>