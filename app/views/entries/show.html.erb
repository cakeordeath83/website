<% provide(:title, "| #{@entry.title}") %>
<div class = "container-fluid" >
  <div class="row">
    <div class="col-md-offset-2 col-md-8" >
      <h1 class="text-center"><%= @entry.title %></h1><br>
      <div class="entryseperator">
      </div>
      <div class="content">
        <p><%= sanitize @entry.description %></p>
        <% if user_signed_in? %>
          <%= link_to "Edit", edit_entry_path(@entry), class: "btn btn-default" %>
        <% end %>
      </div>
    </div><!-- col-md -->
    <%=link_to "Back to Jargon Buster", entries_path, class: "btn btn-default" %>
  </div><!-- row -->
</div><!-- container -->