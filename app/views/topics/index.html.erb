<% if user_signed_in? %>
  <div class="container">
    <h1>Topics index</h1>  
    <table class="table">
	    <thead>
        <tr>
          <td>Name</td>
          <td>Category</td>
          <td></td>
        </tr>
      </thead>
	    <tbody>
        <tr>
        <% @topics.each do |topic| %>
          <td><%= topic.name %></td>
          <td><%= topic.category %></td>
          <td><%= link_to "Assign category", edit_topic_path(topic) %></td>
          <td><%= link_to "Delete", topic_path(topic), method: :delete, data: {confirm: "Are you sure?"} %></td>
        </tr>
	      <% end %>
		  </tbody>
    </table>
  </div>
<% else %>
  <div class="container">
		<h1 class="text-align: center;">Uh uh uh!</h1>
		<p class="text-align: center;">You didn't say the magic word!</p>
		<p class="text-align: center;"><%= link_to image_tag('magic word'), '/'%></p><br>
		<p class="text-align: center;">Sorry, this page is restricted. The rest of the site is open to you though!</p>
	</div>
<% end %>